@using HtmlAgilityPack;

@{
    HtmlDocument document2 = new HtmlDocument();
    //TODO: Make the source path more dynamic.
    //TODO: Refactor this as a tag helper or other
    document2.Load(new System.IO.MemoryStream(System.IO.File.ReadAllBytes("wwwroot\\lib\\AdminLTE-2.3.11\\pages\\charts\\flot.html")));
    var root = document2.DocumentNode;
    var p = root.Descendants()
    .Where(n => n.GetAttributeValue("class", "").Equals("content-wrapper"))
    .Single();
}

@Html.Raw(@p.InnerHtml.Replace("dist/img/", "/lib/AdminLTE-2.3.11/dist/img/"));

@section Scripts {
    <!-- This is needed for non partial rendering -->
    <!-- FLOT CHARTS -->
    <script src="~/lib/AdminLTE-2.3.11/plugins/flot/jquery.flot.min.js"></script>
    <!-- FLOT RESIZE PLUGIN - allows the chart to redraw when the window is resized -->
    <script src="~/lib/AdminLTE-2.3.11/plugins/flot/jquery.flot.resize.min.js"></script>
    <!-- FLOT PIE PLUGIN - also used to draw donut charts -->
    <script src="~/lib/AdminLTE-2.3.11/plugins/flot/jquery.flot.pie.min.js"></script>
    <!-- FLOT CATEGORIES PLUGIN - Used to draw bar charts -->
    <script src="~/lib/AdminLTE-2.3.11/plugins/flot/jquery.flot.categories.min.js"></script>
    <!-- Flot script -->
    <script src="~/js/Flot.js"></script>

}
